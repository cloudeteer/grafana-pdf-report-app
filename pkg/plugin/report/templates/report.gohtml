<!DOCTYPE html>
<html lang="en">
<style>
    *,
    *::after,
    *::before {
        margin: 0;
        padding: 0;
        box-sizing: inherit;
    }

    @page { 
        margin: 3cm 2px 1cm; 
    }

    html {
        box-sizing: border-box;
        font-size: 62.5%;
    }

    body {
        font-family: "Nunito", sans-serif;
        color: #333;
        font-weight: 300;
        line-height: 1.6;
    }

    .container {
        width: 95%;
        margin: auto;
    }

    table {
        width: 100%;
        border-collapse: collapse;
    }

    table td,  table th {
       border: 1px solid #CCC;
       text-align: center;
    }

    .grid {
        display: grid;
        grid-template-columns: repeat(24, 1fr);
        grid-auto-flow: row;
        grid-column-gap: 5px;
        grid-row-gap: 5px;
    }

    .grid-image {
        width: 100%;
        {{/* height: 100%; */}}
        object-fit: cover;
        display: block;
    }

    {{- if eq .Conf.Layout "grid" }}
        {{- range $i, $v := .Dashboard.Panels}}
    .grid-image-{{$i}} {
        grid-column: {{inc $v.GridPos.X}} / span {{$v.GridPos.W}};
        grid-row: {{inc $v.GridPos.Y}} / span {{$v.GridPos.H}};
    }
        {{- end }}
    {{- else }}
        {{- range $i, $v := .Dashboard.Panels}}
    .grid-image-{{$i}} {
        grid-column: 1 / span 24;
        grid-row: {{mult $i}} / span 30;
    }
        {{- end }}
    {{- end }}
</style>

<head>
    <meta charset="UTF-8">
    <title>{{ .Dashboard.Title }}</title>
</head>

<body>
    <div class="container">
        <div class="grid">
            {{- range $i, $v := .PanelPNGs }}
            <figure class="grid-image grid-image-{{$i}}">
                <img src="{{ print $v | url }}" id="image{{$v.Panel.ID}}" alt="{{$v.Panel.Title}}" class="grid-image">
            </figure>
            {{- end }}
        </div>
    </div>
    {{- range $i, $v := .PanelTables }}
        {{- if $v.Data }}
        <div style="break-after:page"></div>

        <div class="container">
            <h2>{{$v.Title}}</h2>
            <table>
                <thead>
                    <tr>
                        {{- range $j, $w := index $v.Data 0}}
                        <th>{{$w}}</th>
                        {{- end }}
                    </tr>
                </thead>
                <tbody>
                    {{- range $j, $w := slice $v.Data 1}}
                    <tr>
                        {{- range $k, $x := $w}}
                        <td>{{$x}}</td>
                        {{- end }}
                    </tr>
                    {{- end }}
                </tbody>
            </table>
        </div>
        {{- end }}
    {{- end }}
</body>

</html> 
